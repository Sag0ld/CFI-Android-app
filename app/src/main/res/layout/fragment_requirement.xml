<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_marginTop="50dp"
    android:layout_marginBottom="75dp">

    <ImageView
        android:id="@+id/imgview_related_requirement"
        android:layout_width="75dp"
        android:layout_height="75dp"
        android:padding="20dp"
        android:src="@drawable/ic_id"
        android:background="@drawable/circle_image_border"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toLeftOf="@id/text_requirement" />

    <TextView
        android:id="@+id/text_requirement"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginStart="10dp"
        android:textColor="@color/white75"
        android:text="@string/slack_connection_message"
        app:layout_constrainedWidth="true"
        app:layout_constraintBottom_toTopOf="parent"
        app:layout_constraintLeft_toRightOf="@id/imgview_related_requirement"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />
</android.support.constraint.ConstraintLayout>